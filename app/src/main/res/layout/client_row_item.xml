<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cedula del Cliente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_search_client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cedula del cliente"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Cliente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_search_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del cliente"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo del Cliente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_search_client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electronico del cliente"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion del Cliente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_search_client_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion del cliente"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Telefonico del Cliente"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_search_client_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono del cliente"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>