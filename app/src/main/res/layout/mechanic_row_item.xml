<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mechanic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del mecánico"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/radioButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mechanic_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del mecánico"
            app:layout_constraintStart_toEndOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/tv_mechanic_name" />

        <TextView
            android:id="@+id/tv_mechanic_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cédula del mecánico"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/tv_mechanic_name_detail" />

        <TextView
            android:id="@+id/tv_mechanic_id_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cédula del mecánico"
            app:layout_constraintStart_toEndOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/tv_mechanic_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>